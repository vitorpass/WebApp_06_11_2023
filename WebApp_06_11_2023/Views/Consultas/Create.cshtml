@model WebApp_06_11_2023.Models.ConsultaModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Consulta Médica</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label>ID Pacientes</label>
            <select name="idPaciente" class="form-control">
                @foreach (var item in Model.ListaPacientes)
                {
                    <option value="@item.idPaciente">@item.nomePaciente</option>
                }

            </select>
            <div class="form-group">
                <label asp-for="IdPaciente" class="control-label"></label>
                <input asp-for="IdPaciente" class="form-control" />
                <span asp-validation-for="IdPaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dataConsulta" class="control-label"></label>
                <input asp-for="dataConsulta" class="form-control" />
                <span asp-validation-for="dataConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fichaConsulta" class="control-label"></label>
                <input asp-for="fichaConsulta" class="form-control" />
                <span asp-validation-for="fichaConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
